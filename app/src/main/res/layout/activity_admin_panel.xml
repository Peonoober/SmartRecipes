<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/topbar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitleAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Админ-панель"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/topbar"
        app:layout_constraintBottom_toBottomOf="@id/topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateRecipe"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="140dp"
        android:text="Создать рецепт"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteRecipe"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Удалить рецепт"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteUser"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Удалить пользователя"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackFromAdmin"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Назад"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>