<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartRecipes">

        <!-- LoginActivity — главный экран приложения -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Экран регистрации -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />

        <!-- Главное меню -->
        <activity
            android:name=".ui.MainMenuActivity"
            android:exported="false" />
        <activity android:name=".ui.AdminPanelActivity" />
        <activity android:name=".ui.AdminCreateRecipeActivity" />
        <activity android:name=".ui.AdminDeleteRecipeActivity" />
        <activity android:name=".ui.AdminDeleteUserActivity" />
        <activity android:name=".ui.SearchActivity" />
        <activity android:name=".ui.RecipeListActivity" />
        <activity android:name=".ui.DetailsRecipeActivity" />
        <activity android:name=".ui.IngredientsActivity" />
        <activity android:name=".ui.FavoritesActivity" />
        <activity android:name=".ui.MyRecipesMenuActivity" />
        <activity android:name=".ui.MyRecipesListActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.CreateMyRecipeActivity" />
    </application>

</manifest>